@using Models.EF
@model Account
@{
    ViewBag.Title = "Thêm/Cập nhật Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script>
        $(document).ready(function () {
            $('#button-imageselect').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#tbImage').val(url);


                };
                finder.popup();

            });
            var editor = CKEDITOR.replace('tardecription', {
                customConfig: "/Assets/Admin/plugins/ckeditor/config.js",

            });
        });


    </script>

}

<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Thêm/Cập nhật tài khoản</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @*form here*@

                        @using (Html.BeginForm("AddAccount", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Thông Tin</h4>
                                <hr />
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                                <div class="item form-group">
                                    @Html.LabelFor(model => model.id, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.TextBoxFor(model => model.id, new { @class = "form-control col-md-7 col-xs-12", @required = "", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="item form-group">
                                    @Html.LabelFor(model => model.name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.TextBoxFor(model => model.name, new { @class = "form-control col-md-7 col-xs-12", @required = "" })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="item form-group">
                                    @Html.LabelFor(model => model.email, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.TextBoxFor(model => model.email, new { @class = "form-control col-md-7 col-xs-12", @required = "" })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="item form-group">
                                    @Html.LabelFor(model => model.password, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.TextBoxFor(model => model.password, new { @class = "form-control col-md-7 col-xs-12" })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="item form-group">
                                    @Html.LabelFor(model => model.phone, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.TextBoxFor(model => model.phone, new { @class = "form-control col-md-7 col-xs-12", @type = "number", @required = "" })
                                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="item form-group">
                                    <div class="col-md-offset-5 col-md-10">
                                        <input type="submit" value="Add" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                        @*end form*@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



